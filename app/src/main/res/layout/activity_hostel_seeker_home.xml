<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HostelSeekerHome"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_main_hostel_seeker_home_activity">

        <Button
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:background="@color/black"
            android:text="@string/request_reservation_activity_hostel_seeker_home"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/btn_request_reg_hostel_seeker_home_activity"/>


        <Button
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:background="@color/black"
            android:text="@string/communicate_activity_hostel_seeker_home"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_communicate_hostel_seeker_home_activity"
            />

        <Button
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:background="@color/black"
            android:text="@string/give_rating_activity_hostel_seeker_home"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_give_rating_hostel_seeker_home_activity"
            />

        <Button
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:background="@color/black"
            android:text="@string/give_feedback_activity_hostel_seeker_home"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_give_feedback_hostel_seeker_home_activity"
            />

        <Button
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:background="@color/black"
            android:text="@string/delete_account_activity_hostel_seeker_home"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_delete_profile_hostel_seeker_home_activity"
            />

        <Button
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:background="@color/black"
            android:text="@string/edit_profile_activity_hostel_seeker_home"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_edit_profile_hostel_seeker_home_activity"
            />


        <Button
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:background="@color/colorAccent"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_logout_hostel_seeker_home_activity"
            />

    </LinearLayout>
</ScrollView>