<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".HostelManagerLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/txt_login"
            android:textColor="@color/white"
            android:textSize="38sp"
            android:textStyle="bold">

        </TextView>

        <View
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="70dp"
            android:background="@color/background" />

        <EditText
            android:id="@+id/manager_login_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:hint="@string/et_username"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />


        <EditText
            android:id="@+id/manager_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:width="200dp"
            android:hint="@string/et_password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>


        <View
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background" />


        <Button
            android:id="@+id/btn_login_hostel_manager_login_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:background="@color/brown"
            android:text="@string/btn_login"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="italic" />


        <Button
            android:id="@+id/btn_signup_ll_hostel_manager_login_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:width="200dp"
            android:background="@color/brown"
            android:text="@string/btn_signup"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_forgot_password_hostel_manager_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="50dp"
            android:text="@string/txt_resetPassword"
            android:textColor="@color/white"></TextView>


    </LinearLayout>

</ScrollView>